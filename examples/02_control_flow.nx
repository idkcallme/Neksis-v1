// Neksis Tutorial: Control Flow (if/else, loops)
// Run with: neksis examples/02_control_flow.nx

fn main() -> Int {
    println("=== CONTROL FLOW TUTORIAL ===");
    
    // 1. If-else statements
    println("\n=== IF-ELSE STATEMENTS ===");
    let age: Int = 25;
    
    if age >= 18 {
        println("You are an adult");
    } else {
        println("You are a minor");
    }
    
    // Multiple conditions
    let score: Int = 85;
    if score >= 90 {
        println("Grade: A");
    } else if score >= 80 {
        println("Grade: B");
    } else if score >= 70 {
        println("Grade: C");
    } else {
        println("Grade: F");
    }
    
    // 2. While loops
    println("\n=== WHILE LOOPS ===");
    println("Counting from 1 to 5:");
    let i: Int = 1;
    while i <= 5 {
        println("Count: " + i);
        i = i + 1;
    }
    
    // 3. Complex conditions
    println("\n=== COMPLEX CONDITIONS ===");
    let num: Int = 12;
    if num > 0 && num % 2 == 0 {
        println(num + " is positive and even");
    } else if num > 0 && num % 2 == 1 {
        println(num + " is positive and odd");
    } else {
        println(num + " is not positive");
    }
    
    // 4. FizzBuzz example
    println("\n=== FIZZBUZZ EXAMPLE ===");
    let n: Int = 1;
    while n <= 15 {
        if n % 15 == 0 {
            println("FizzBuzz");
        } else if n % 3 == 0 {
            println("Fizz");
        } else if n % 5 == 0 {
            println("Buzz");
        } else {
            println(n);
        }
        n = n + 1;
    }
    
    return 0;
}
