// Comprehensive neksis Language Test
// Testing all implemented features

fn main() -> Int {
    // Test basic literals and variables
    let x = 42;
    let y = 3.14;
    let z = true;
    let s = "hello";
    
    // Test arithmetic operations
    let sum = x + 10;
    let product = x * 2;
    let quotient = x / 2;
    
    // Test string operations
    let greeting = s + " world";
    
    // Test boolean operations
    let result = z && true;
    let comparison = x > 40;
    
    // Test if expressions
    let conditional = if x > 40 {
        "large"
    } else {
        "small"
    };
    
    // Test function calls
    print("Testing basic functionality");
    print("x = " + x);
    print("y = " + y);
    print("z = " + z);
    print("s = " + s);
    print("sum = " + sum);
    print("greeting = " + greeting);
    print("result = " + result);
    print("comparison = " + comparison);
    print("conditional = " + conditional);
    
    // Test block expressions
    let block_result = {
        let temp = 100;
        temp + 50
    };
    
    print("block_result = " + block_result);
    
    // Test nested scopes
    {
        let inner = "inner scope";
        print("inner = " + inner);
    }
    
    // Test return value
    return 0;
} 